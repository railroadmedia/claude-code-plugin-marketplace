{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${BE_GITHUB_TOKEN}"
      }
    },
    "atlassian": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "JIRA_URL",
        "-e",
        "JIRA_USERNAME",
        "-e",
        "JIRA_API_TOKEN",
        "ghcr.io/sooperset/mcp-atlassian:latest"
      ],
      "env": {
        "JIRA_URL": "${BE_JIRA_URL}",
        "JIRA_USERNAME": "${BE_JIRA_EMAIL}",
        "JIRA_API_TOKEN": "${BE_JIRA_API_TOKEN}"
      }
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "LARAVEL_PROJECT_PATH": "${BE_LARAVEL_PROJECT_PATH}"
      }
    }
  }
}
